 @implements IDisposable
@if (allState.ShowTrajets)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="float-start">Trajets</h5>
                        <button class="btn btn-outline-success float-end" @onclick="AddButtonClicked">
                            <i class="bi bi-plus-circle-dotted"></i> Ajouter un trajet
                        </button>
                    </div>

                    <div class="p-2">
                        <input class="form-control"
                               placeholder="Rechercher par CIN ou Nom"
                               @bind="searchNom"
                               @bind:event="oninput" />
                    </div>

                    <div class="card-header" style="max-height:580px; overflow-x:hidden; overflow-y:scroll;">
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Départ</th>
                                        <th>Destination</th>
                                        <th>Mission</th>
                                        <th>Distance</th>
                                        <th>CIN</th>
                                        <th>Utilisateur</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Trajets is not null)
                                    {
                                        foreach (var item in Trajets.Where(v => string.IsNullOrWhiteSpace(searchNom) ||
                                        (v.Utilisateur != null &&
                                        (
                                        v.Utilisateur.CIN?.Contains(searchNom, StringComparison.OrdinalIgnoreCase) == true ||
                                        v.Utilisateur.Nom?.Contains(searchNom, StringComparison.OrdinalIgnoreCase) == true
                                        )
                                        )))
                                        {
                                            <tr>
                                                <td>@item.Date</td>
                                                <td>@item.LieuDepart</td>
                                                <td>@item.Destination</td>
                                                <td>
                                                    @if (item.IsMission)
                                                    {
                                                        <i class="bi bi-check-circle text-success"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-x-circle text-danger"></i>
                                                    }
                                                </td>
                                                <td>@item.DistanceParcourue km</td>
                                                <td>@item.Utilisateur?.CIN</td>

                                                <td>@item.Utilisateur?.Nom</td>
                                                <td>
                                                    <i class="bi bi-pencil text-info" id="cursorStyle" @onclick="() => EditClicked(item)"></i>
                                                    <i class="bi bi-trash text-danger ms-2" id="cursorStyle" @onclick="() => DeleteClicked(item)"></i>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7">
                                                <div class="alert alert-info text-center">Aucun trajet trouvé.</div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

<style>
    #cursorStyle {
        cursor: pointer;
    }
</style>

 <TrajetDialog @ref="trajetDialog"
              HandleSaveOperationEvent="HandleSaveOperationEvent"
              Trajet="Trajet"
              Utilisateurs="Utilisateurs"
              Voitures="Voitures" />
@code {
    private string searchNom = string.Empty;

    public string Title { get; set; } = "Ajouter";
    TrajetDialog? trajetDialog;

    public Trajet Trajet { get; set; } = new();
    public List<Trajet> Trajets { get; set; } = new();
    public List<Utilisateur> Utilisateurs { get; set; } = new();
    public List<Voiture> Voitures { get; set; } = new();


    protected override async Task OnInitializedAsync()
    {
        await LoadTrajets();
        await LoadUtilisateurs();
        allState.Action += StateHasChanged;
    }

    private async Task LoadTrajets()
    {
        Trajets = await trajetService.GetAll(MyConstants.TrajetBaseUrl);
    }

    private async Task LoadUtilisateurs()
    {
        Utilisateurs = await utilisateurService.GetAll(MyConstants.UtilisateurBaseUrl);
    }
    private async Task LoadVoitures()
    {
        Voitures = await voitureService.GetAll(MyConstants.VoitureBaseUrl);
    }

    void AddButtonClicked()
    {
        Trajet = new();
        trajetDialog?.ChangeTitle("Ajouter");
        OpenDialog();
    }

    void EditClicked(Trajet tr)
    {
        Trajet = tr;
        trajetDialog?.ChangeTitle("Modifier");
        OpenDialog();
    }

    async Task DeleteClicked(Trajet tr)
    {
        bool confirm = await dialogService.ConfirmAsync("Voulez-vous vraiment supprimer ce trajet ?", "Confirmation");
        if (!confirm) return;

        var response = await trajetService.SupprimerTrajetAsync(tr.Id, MyConstants.TrajetBaseUrl);
        bool result = await DisplayMessage(response.Flag, response.Message);

        if (result)
            await LoadTrajets();
    }

    async Task HandleSaveOperationEvent()
    {
        bool success = false;

        if (Trajet.Id > 0)
        {
            var result = await trajetService.ModifierTrajetAsync(Trajet, MyConstants.TrajetBaseUrl);
            success = await DisplayMessage(result.Flag, result.Message);
        }
        else
        {
            var result = await trajetService.AjouterTrajetAsync(Trajet, MyConstants.TrajetBaseUrl);

            success = await DisplayMessage(result.Flag, result.Message);
        }

        if (success)
        {
            Trajet = new();
            await LoadTrajets();
            await LoadVoitures();
            trajetDialog?.ChangeTitle("Ajouter");
        }
    }

    async Task<bool> DisplayMessage(bool flag, string message)
    {
        if (flag)
        {
            await dialogService.AlertAsync(message, "Succès");
            return true;
        }
        else
        {
            await dialogService.AlertAsync(message, "Erreur");
            return false;
        }
    }

    void OpenDialog() => trajetDialog?.OpenDialog();

    public void Dispose() => allState.Action -= StateHasChanged;
}
