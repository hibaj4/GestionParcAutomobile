@implements IDisposable
@if (allState.ShowVisites)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header ">
                        <h5 class="float-start">Visites</h5>
                        <button class="btn btn-outline-success float-end" @onclick="AddButtonClicked">
                            <i class="bi bi-plus-circle-dotted"></i> Ajouter une visite
                        </button>
                    </div>
                    <div class="card-header" style="max-height:580px; overflow-x:hidden;overflow-y:scroll;">
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">Immatriculation</th>
                                        <th scope="col">Voiture</th>
                                        <th scope="col">Date Prochaine Visite</th>
                                        <th scope="col">Date Derniere Visite</th>
                                        <th scope="col">Montant Visite Technique</th>



                                       

                                      

                                        


                                        <th scope="col">Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (DocumentAdministratifs is not null)
                                    {
                                        foreach (var item in DocumentAdministratifs)
                                        {
                                            <tr>
                                                <td>@item.Voiture!.Immatriculation</td>


                                                <td>@item.Voiture!.Marque</td>
                                                <td>@item.DateProchaineVisite</td>
                                                <td>@item.DateDerniereVisite</td>
                                                <td>@item.MontantVisiteTechnique DH</td>



                                                





                                                <td>
                                                    <i class="bi bi-pencil text-info" id="cursorStyle"
                                                       @onclick="() => EditClicked(item)"></i>
                                                    <i class="bi bi-trash text-danger" id="cursorStyle"
                                                       @onclick="() => DeleteClicked(item)"></i>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4"><div class="alert alert-info text-center">Aucun historique ajoutée pour le moment</div></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}






<style>
    #cursorStyle {
        cursor: pointer;
    }
</style>

<VisiteDialog @ref="visiteDialog"
                HandleSaveOperationEvent="HandleSaveOperationEvent"
                DocumentAdministratif="DocumentAdministratif"
              
                Voitures="Voitures" />









@code {
    public string Title { get; set; } = "Ajouter";
    VisiteDialog? visiteDialog;
    DocumentAdministratif DocumentAdministratif = new();
    public List<DocumentAdministratif> DocumentAdministratifs { get; set; } = new();
    public List<Voiture> Voitures { get; set; } = new();

    protected async override Task OnInitializedAsync()
    {
        await GetDocumentAdministratifs();
        await GetVoitures();
        allState.Action += StateHasChanged;
    }
    private async Task GetDocumentAdministratifs()
    {
        DocumentAdministratifs = await documentAdministratifService.GetAll(MyConstants.DocumentAdministratifBaseUrl);
    }
  
    private async Task GetVoitures()
    {
        Voitures = await voitureService.GetAll(MyConstants.VoitureBaseUrl);
    }

    void AddButtonClicked()
    {
        visiteDialog?.ChangeTitle("Ajouter");
        DocumentAdministratif = new();
        OpenDialog();
    }

    void OpenDialog()
    {
        visiteDialog?.OpenDialog();
    }



    private async Task HandleSaveOperationEvent()
    {
        bool successCheck = false;

        if (DocumentAdministratif.Id > 0)
        {
            var result = await documentAdministratifService
                .Update(DocumentAdministratif, MyConstants.DocumentAdministratifBaseUrl);
            successCheck = await DisplayMessage(result.Flag, result.Message);
        }
        else
        {
            var response = await documentAdministratifService
                .Insert(DocumentAdministratif, MyConstants.DocumentAdministratifBaseUrl);
            successCheck = await DisplayMessage(response.Flag, response.Message);
        }

        if (successCheck)
        {
            DocumentAdministratif = new();
            await GetDocumentAdministratifs();
            visiteDialog?.ChangeTitle("Ajouter");
        }
    }


    private void EditClicked(DocumentAdministratif d)
    {
        visiteDialog?.ChangeTitle("Modifier");
        DocumentAdministratif = d;
        OpenDialog();
    }

    private async Task DeleteClicked(DocumentAdministratif d)
    {
        bool confirm = await dialogService.ConfirmAsync("Êtes-vous sûr de vouloir supprimer cette visite ?", "Confirmation de suppression");
        if (!confirm) return;
        var response = await documentAdministratifService.DeleteById(d.Id, MyConstants.DocumentAdministratifBaseUrl);
        var result = await DisplayMessage(response.Flag, response.Message);
        if (result)

            await GetDocumentAdministratifs();


    }




    private async Task<bool> DisplayMessage(bool flag, string message)
    {
        if (flag)
        {
            await dialogService.AlertAsync(message, "Succès !");
            return true;
        }
        else
        {
            await dialogService.AlertAsync(message, "Erreur !");
            return false;
        }


    }

    public void Dispose()
    {
        allState.Action -= StateHasChanged;
    }




}



