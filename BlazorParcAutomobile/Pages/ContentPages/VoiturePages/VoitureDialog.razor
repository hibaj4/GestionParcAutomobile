

<SfDialog Width="350px" InModule="true" ShowCloseIcon="true" @bind-Visible="IsVisible">
    <DialogEvents OnOpen="OpenDialog"></DialogEvents>
    <DialogTemplates>
        <Header>@Title véhicule</Header>
        <Content>
            <EditForm Model="Voiture" OnValidSubmit="Save">
                <div class="card card-vector-success">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">Immatriculation</label>
                            <InputText @bind-Value="Voiture.Immatriculation" class="form-control"/>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Marque</label>
                            <InputText @bind-Value="Voiture.Marque" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Modèle</label>
                            <InputText @bind-Value="Voiture.Modele" class="form-control" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Couleur</label>
                            <InputText @bind-Value="Voiture.Couleur" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Type</label>
                            <InputText @bind-Value="Voiture.TypeVehicule" class="form-control" />
                        </div>
                        <div class="form-group mb-3">
                        <label class="form-label">Année</label>
                        <InputNumber @bind-Value="Voiture.AnneeMiseCirculation" class="form-control" />
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Carburant</label>
                        <InputSelect @bind-Value="Voiture.TypeCarburant" class="form-select">
                            <option value="">Sélectionner</option>
                            <option value="Essence">Essence</option>
                            <option value="Diesel">Diesel</option>
                            <option value="Hybride">Hybride</option>
                            <option value="Electrique">Electrique</option>
                        </InputSelect>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Kilométrage</label>
                        <InputNumber @bind-Value="Voiture.Kilometrage" class="form-control" />
                    </div>

                    <div class="form-check form-switch mb-3">
                        <InputCheckbox @bind-Value="Voiture.AvecChauffeur" class="form-check-input" />
                        <label class="form-check-label">Avec chauffeur</label>
                    </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Origine</label>
                            <InputSelect @bind-Value="Voiture.Origine" class="form-control">
                                <option value="">-- Choisir l'origine --</option>
                                <option value="HCP">HCP</option>
                                <option value="Location">Location</option>
                            </InputSelect>
                        </div>
                        

                    </div>
                </div>
                
            </EditForm>
        </Content>
    </DialogTemplates>
    <DialogButtons>
        <DialogButton Content="Enregistrer" Type="ButtonType.Submit" IsPrimary="true" OnClick="Save" />
    </DialogButtons>
</SfDialog>

@code{
    [Parameter] public Voiture Voiture { get; set; } = new();
    [Parameter] public EventCallback<Voiture> HandleSaveOperationEvent { get; set; }
    private bool IsVisible { get; set; } = false;
    public string Title { get; set; } = "Ajouter";
    public void OpenDialog()
    {
        IsVisible= true;
        StateHasChanged();
    }

    public async Task Save()
    {
        if (string.IsNullOrEmpty(Voiture.Immatriculation))
            await dialogService.AlertAsync("Entrer l'mmatriculation ", "Alerte !");
        else
            await HandleSaveOperationEvent.InvokeAsync(Voiture);

    }
   


    public void ChangeTitle(string title)
    {
        Title = title;
    }
}

    